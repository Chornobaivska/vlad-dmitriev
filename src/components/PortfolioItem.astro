---
import { Image } from "astro:assets";

const { image, title, description, link } = Astro.props;
---

<div class="grid grid-cols-12 gap-4 lg:gap-8">
  <div class="col-span-12 lg:col-span-8">
    <Image src={image} alt={title} class="w-full" />
  </div>

  <div class="col-span-12 lg:col-span-4">
    <h1 class="text-3xl tracking-wider">{title}</h1>
    <p class="text-zinc-500 mt-4">{description}</p>
    <a href={link} class="tracking-wider text-lg mt-4 inline-block">
      See more &gt;
    </a>
  </div>
</div>
