---
import Navbar from "@/components/Navbar.astro";
import Layout from "@/components/Layout.astro";
---

<Layout>
  <div
    class="px-10 overflow-hidden h-screen flex flex-col bg-no-repeat bg-cover bg-center justify-between"
    style="background-image: url('/images/one-motion.png');"
  >
    <Navbar white={true} />

    <p
      class="text-base sm:text-lg md:text-xl lg:text-2xl xl:text-4xl text-white tracking-wider mb-auto"
    >
      Hey, I am digital<br />
      deisgner,<br />
      Designing Brands<br />
      that Speak Louder<br />
      than words.<br />
    </p>

    <div>
      <a
        href="/works"
        class="flex items-center text-white hover:opacity-80 transition-opacity duration-300"
      >
        <span
          class="text-6xl sm:text-8xl md:text-[10rem] lg:text-[12rem] xl:text-[14rem] 2xl:text-[19rem] uppercase"
        >
          Works
        </span>
        <span
          class="ml-auto text-6xl sm:text-8xl md:text-[10rem] lg:text-[12rem] xl:text-[14rem] 2xl:text-[19rem] uppercase"
        >
          (&#8250;)
        </span>
      </a>
    </div>
  </div>
</Layout>
